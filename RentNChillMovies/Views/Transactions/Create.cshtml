@model RentNChillMovies.ViewModels.TransactionViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Transaction.AccountId" class="control-label"></label>
                <select asp-for="Transaction.AccountId" class ="form-control" asp-items="ViewBag.AccountId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.RentId" class="control-label"></label>
                <select asp-for="Transaction.RentId" class ="form-control" asp-items="ViewBag.RentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.TransactionDate" class="control-label"></label>
                <input asp-for="Transaction.TransactionDate" class="form-control" />
                <span asp-validation-for="Transaction.TransactionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.TransactionAmount" class="control-label"></label>
                <input asp-for="Transaction.TransactionAmount" class="form-control" />
                <span asp-validation-for="Transaction.TransactionAmount" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Transaction.IsCompleted" /> @Html.DisplayNameFor(model => model.Transaction.IsCompleted)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
